{
  "title": "auth",
  "description": "endpoints for authentication - register, login, password requirement, refresh token",
  "version": "1.0.0",
  "base_path": "/api/v1/auth",
  "endpoints": {
    "register": {
      "method": "POST",
      "path": "/register",
      "description": "Register a new user",
      "request": {
        "contentType": "application/json",
        "body": {
          "name": {
            "type": "string",
            "required": true
          },
          "email": {
            "type": "string",
            "format": "email",
            "required": true
          },
          "password": {
            "type": "string",
            "format": "password",
            "required": true
          }
        }
      },
      "response": {
        "201": {
          "description": "User registered successfully",
          "body": {
            "access_token": {
              "type": "string",
              "value": "Bearer <access_token>"
            },
            "refresh_token": {
              "type": "string",
              "value": "Bearer <refresh_token>"
            },
            "token_type": {
              "type": "string",
              "value": "Bearer"
            },
            "expires_in": {
              "type": "integer",
              "value": 3600
            },
            "user": {
              "id": "",
              "name": "john doe",
              "email": "john.doe@example.com"
            }
          }
        }
      }
    },
    "login": {
      "method": "POST",
      "path": "/login",
      "desciption": "Login user",
      "body": {
        "request": {
          "contentType": "application/json",
          "body": {
            "email": {
              "type": "string",
              "format": "email",
              "required": true
            },
            "password": {
              "type": "string",
              "format": "password",
              "required": true
            }
          }
        },
        "response": {
          "200": {
            "description": "User logged in successfully",
            "body": {
              "access_token": {
                "type": "string",
                "value": "Bearer <access_token>"
              },
              "refresh_token": {
                "type": "string",
                "value": "Bearer <refresh_token>"
              },
              "token_type": {
                "type": "string",
                "value": "Bearer"
              },
              "expires_in": {
                "type": "integer",
                "value": 3600
              },
              "user": {
                "id": ""
              }
            }
          }
        }
      }
    },
    "password_requirement": {
      "method": "GET",
      "path": "/password-requirement",
      "description": "Fetch password policy and validation requirements",
      "response": {
        "200": {
          "description": "Password requirement fetch successfully",
          "body": {
            "minLength": {
              "type": "number",
              "example": 8
            },
            "maxLength": {
              "type": "number",
              "example": 20
            },
            "requireUppercase": {
              "type": "boolean",
              "example": true
            },
            "requireLowercase": {
              "type": "boolean",
              "example": true
            },
            "requireNumber": {
              "type": "boolean",
              "example": true
            },
            "requireSpecialCharacter": {
              "type": "boolean",
              "example": false
            }
          }
        }
      }
    },
    "refresh_token": {
      "method": "POST",
      "endpoints": "/refreh-token",
      "description": "Use refresh token to get new access token",
      "body": {
        "request": {
          "contentType": "application/json",
          "body": {
            "refresh_token": {
              "type": "string",
              "format": "token",
              "required": true
            }
          }
        },
        "response": {
          "200": {
            "description": "Token refreshed successfully",
            "body": {
              "access_token": "Bearer <token>",
              "refresh_token": "Bearer <token>",
              "token_type": "Bearer",
              "expires_in": 3600
            }
          }
        }
      }
    },
    "reset_password_request": {
      "method": "POST",
      "endpoints": "/reset-password/request",
      "description": "Request password reset if user forgot password",
      "body": {
        "request": {
          "contentType": "application/json",
          "body": {
            "email": {
              "type": "string",
              "format": "email",
              "required": true
            }
          }
        },
        "response": {
          "200": {
            "description": "Token refreshed successfully",
            "body": {
              "message": "Password reset request link sent successfully to your email"
            }
          }
        }
      }
    },
    "reset_password_confirm": {
      "method": "POST",
      "endpoints": "/reset-password/confirm",
      "description": "confirm password reset",
      "body": {
        "request": {
          "contentType": "application/json",
          "body": {
            "token": {
              "type": "string",
              "format": "token",
              "required": true
            },
            "new_password": "<new password>",
            "confirm_new_password": "<confirm new password>"
          }
        },
        "response": {
          "200": {
            "body": {
              "message": "Password reset successfully"
            }
          }
        }
      }
    }
  }
}